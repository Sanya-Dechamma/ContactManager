@model List<Contact>

@{
    ViewData["Title"] = "Home Page";
}

<a asp-controller="Contacts" asp-action="Add">Add New Contact</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td><a asp-controller="Contacts" asp-action="Details" asp-route-id="@contact.ContactId">@contact.FirstName</a></td>
                <td><a asp-controller="Contacts" asp-action="Details" asp-route-id="@contact.ContactId">@contact.LastName</a></td>
                <td>@contact.Phone</td>
                <td>@contact.Email</td>
                <td>@contact.Category.CategoryName</td>
            </tr>
        }
    </tbody>
</table>